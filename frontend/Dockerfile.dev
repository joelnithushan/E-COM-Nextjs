# ============================================
# Frontend Dockerfile - Development
# For local development with hot reload
# ============================================

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Copy application source
COPY . .

# Expose port
EXPOSE 3000

# Start Next.js dev server
CMD ["npm", "run", "dev"]









